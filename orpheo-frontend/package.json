{
  "name": "orpheo-frontend",
  "version": "1.0.0",
  "description": "Orpheo - Sistema de Gestión Masónica Frontend",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.1",
    "axios": "^1.3.0",
    "clsx": "^1.2.1",
    "date-fns": "^2.29.3",
    "framer-motion": "^9.0.0",
    "js-cookie": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.43.0",
    "react-hot-toast": "^2.4.0",
    "react-pdf": "^6.2.2",
    "react-query": "^3.39.3",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.8.0",
    "react-scripts": "5.0.1",
    "recharts": "^2.5.0",
    "socket.io-client": "^4.6.1",
    "web-vitals": "^3.1.0"
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.33.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.3",
    "tailwindcss": "^3.2.6"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx --fix",
    "lint:check": "eslint src --ext .js,.jsx",
    "format": "prettier --write src/**/*.{js,jsx,css,md}",
    "format:check": "prettier --check src/**/*.{js,jsx,css,md}",
    "analyze": "npm run build && npx serve -s build",
    "build:prod": "NODE_ENV=production npm run build",
    "deploy": "chmod +x scripts/deploy.sh && ./scripts/deploy.sh",
    "docker:build": "docker build -t orpheo-app .",
    "docker:run": "docker run -p 80:80 orpheo-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "proxy": "http://localhost:3001"
}
